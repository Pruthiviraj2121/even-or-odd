package com.company;

import java.util.Scanner;
public class Main {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println("enetr x value: ");
        int x;
        x = sc.nextInt();
        int s =0;
        while(x != 0) {
            int t = x % 10;
            s = s * 10 + t;
            x = x / 10;
        }

        System.out.println("after the process::");
        System.out.println("The reverse is:"  + s);

    }
}
